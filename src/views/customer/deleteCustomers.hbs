<div class="row">
  
  
  {{#each customers}}
  <div class="col-md-12">
    <div class="card m-4">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          ID : {{ _id }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          FirstName : {{ FirstName }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          LastName : {{ LastName }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          Address : {{ address }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          City : {{ city }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          Country : {{ country }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          District : {{ district }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          Status : {{ status }} 
        </h4>
        <form action="/customer/deletebyname/{{FirstName}}?_method=DELETE" method="POST" class="m-2">
                <input id="value" type="text" name="FirstName" placeholder="Eliminar Por Nombre" >
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
            <form action="/customer/deletebyID/{{_id}}?_method=DELETE" method="POST" class="m-2">
              <input type="hidden" name="_method" value="DELETE">
                <input type="text" name="_id" placeholder="Eliminar Por ID" >
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <p class="lead">No hay customers</p>
      <a href="/customer/add" class="btn btn-success btn-block">AÃ±adir un nuevo customer</a>
    </div>
  </div> 
  {{/each}}
</div>
