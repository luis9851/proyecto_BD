<div class="row">
    <div class="card mb-4">
        <div class="card-body">
            <form action="/customer/searchbyID/{{id}}" method="GET" class="m-2">
                <input type="text" name="id" placeholder="Buscar Por ID" >
                <button type="submit" class="btn btn-success btn-sm">Search</button>
            </form>
            <form action="/customer/searchN/{{FirstName}}" class="m-2">
                <input type="text" name="FirstName" placeholder="Buscar Por Nombre" >
                <button type="submit" class="btn btn-success btn-sm">Search</button>
            </form>
            <form action="/customer/searchbyContry/{{Country}}" method="GET" class="m-2">
                <input type="text" name="Country" placeholder="Buscar Por Country" >
                <button type="submit" class="btn btn-success btn-sm">Search</button>
            </form>
        </div>
    </div>
  {{#each customers}}
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          ID : {{ _id }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          FirstName : {{ FirstName }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          LastName : {{ LastName }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          Address : {{ address }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          City : {{ city }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          Country : {{ country }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          District : {{ district }} 
        </h4>
        <h4 class="card-title d-flex justify-content-between align-items-center">
          Status : {{ status }} 
        </h4>
        
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <p class="lead">No hay customers</p>
      <a href="/customer/add" class="btn btn-success btn-block">AÃ±adir un nuevo customer</a>
    </div>
  </div>
  {{/each}}
</div>